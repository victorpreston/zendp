                            sendFlagElement.src = `https://flagcdn.com/w40/${sendCurrency === 'USD' ? 'us' : 'ng'}.png`;
                        }
                    }
                    
                    fetchExchangeRate();
                });
            });
            
            // Event listener for transfer type dropdown
            document.querySelectorAll('.transfer-type-dropdown .dropdown-item').forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    transferFeePercentage = parseFloat(this.getAttribute('data-fee'));
                    transferType = this.textContent;
                    
                    // Update the dropdown toggle text
                    document.getElementById('transferTypeDropdown').textContent = transferType;
                    
                    calculateConversion();
                });
            });
            
            sendAmountInput.addEventListener('input', function() {
                let cursorPosition = this.selectionStart;
                let originalLength = this.value.length;
                
                let numericValue = this.value.replace(/[^0-9.]/g, '');
                
                let parts = numericValue.split('.');
