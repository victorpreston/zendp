        /* --- Phone mockup stack --- */
        .mockup-stack {
        position: relative;
        width: 100%;
        max-width: 380px;            
        margin: 0 auto;
        aspect-ratio: 9 / 16;        
        }

        .mockup-stack .phone {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 78%;                  
        transform: translate(-50%, -50%);
        border-radius: 28px;         /
        box-shadow:
            0 6px 12px rgba(0,0,0,0.10),
            0 18px 40px rgba(0,0,0,0.18);
        outline: 1px solid rgba(255,255,255,0.25); 
        /* background: #000;             */
        }

        .mockup-stack .phone.back {
        z-index: 1;
        transform: translate(-60%, -52%) rotate(-6deg); 
        filter: saturate(0.95) brightness(0.98);
        }

        .mockup-stack .phone.front {
        z-index: 2;
        transform: translate(-42%, -48%) rotate(4deg);
        }

        .mockup-stack .phone img {
        width: 100%;
        height: auto;
        display: block;
        border-radius: inherit;
        }

        @media (hover: hover) and (pointer: fine) {
        .mockup-stack:hover .phone.back {
            transform: translate(-62%, -54%) rotate(-8deg);
            transition: transform 300ms ease;
        }
        .mockup-stack:hover .phone.front {
            transform: translate(-40%, -46%) rotate(6deg);
            transition: transform 300ms ease;
        }
        }

        @media (max-width: 576px) {
        .mockup-stack {
            max-width: 320px;
        }
        .mockup-stack .phone.back {
            transform: translate(-55%, -51%) rotate(-4deg);
        }
        .mockup-stack .phone.front {
            transform: translate(-45%, -49%) rotate(3deg);
        }
        }

        @media (prefers-reduced-motion: reduce) {
        .mockup-stack .phone,
        .mockup-stack:hover .phone {
            transition: none !important;
        }
        }

