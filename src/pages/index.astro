                        receiveCurrencyElement.textContent = currency;
                        receiveFlagElement.src = `https://flagcdn.com/w40/${flagCode}.png`;
                        receiveFlagElement.alt = `${currency} flag`;
                    }
                    
                    // Prevent same currency selection
                    if (sendCurrency === receiveCurrency) {
                        if (isSendCurrency) {
                            receiveCurrency = receiveCurrency === 'USD' ? 'NGN' : 'USD';
                            receiveCurrencyElement.textContent = receiveCurrency;
                            receiveFlagElement.src = `https://flagcdn.com/w40/${receiveCurrency === 'USD' ? 'us' : 'ng'}.png`;
