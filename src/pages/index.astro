            // Language Selector Functionality
		document.addEventListener('DOMContentLoaded', function() {
			const languageItems = document.querySelectorAll('.language-selector .dropdown-item');
			const languageToggle = document.querySelector('.language-selector .dropdown-toggle');
			
			// Only run if elements exist
			if (languageItems.length > 0 && languageToggle) {
				languageItems.forEach(item => {
				item.addEventListener('click', function(e) {
					e.preventDefault();
					
					// Remove active class from all items
					languageItems.forEach(li => li.classList.remove('active'));
					
					// Add active class to clicked item
					this.classList.add('active');
					
					// Update the toggle button
					const img = this.querySelector('img');
					const text = this.textContent.trim();
					
					if (img) {
					const toggleImg = languageToggle.querySelector('img');
					if (toggleImg) {
						toggleImg.src = img.src;
					}
					}
					
					const toggleSpan = languageToggle.querySelector('span');
					if (toggleSpan) {
					toggleSpan.textContent = text;
					}
				});
				});
			}
			});
        </script>
		
