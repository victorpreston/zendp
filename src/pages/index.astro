                            'EUR': { 'USD': 1.18, 'KES': 159.2, 'NGN': 925.0, 'GBP': 0.86, 'EUR': 1 },
                            'GBP': { 'USD': 1.37, 'KES': 185.3, 'NGN': 1076.5, 'EUR': 1.16, 'GBP': 1 }
                        };
                        
                        if (fallbackRates[sendCurrency] && fallbackRates[sendCurrency][receiveCurrency]) {
                            exchangeRate = fallbackRates[sendCurrency][receiveCurrency];
                            calculateConversion();
                        }
                    }
                } catch (error) {
                    console.error("Error fetching exchange rate:", error);
                }
            }
            
