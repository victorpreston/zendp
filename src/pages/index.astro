            const receiveCurrencyElement = document.getElementById('receive-currency');
            const sendFlagElement = document.getElementById('send-flag');
            const receiveFlagElement = document.getElementById('receive-flag');
            const feeAmountElement = document.getElementById('fee-amount');
            const convertAmountElement = document.getElementById('convert-amount');
            const exchangeRateElement = document.getElementById('exchange-rate');
            const deliveryDateElement = document.getElementById('delivery-date');
            
            let sendCurrency = 'USD';
            let receiveCurrency = 'NGN';
            let exchangeRate = 1526.64;
            let transferFeePercentage = 0.005;
            let transferType = 'Low Cost Transfer';
            
            function setDeliveryDate() {
                const today = new Date();
                let deliveryDate = new Date(today);
                let daysToAdd = 3;
                
                while (daysToAdd > 0) {
                    deliveryDate.setDate(deliveryDate.getDate() + 1);
                    if (deliveryDate.getDay() !== 0 && deliveryDate.getDay() !== 6) {
                        daysToAdd--;
                    }
                }
                
                const options = { month: 'long', day: 'numeric' };
                deliveryDateElement.textContent = `By ${deliveryDate.toLocaleDateString('en-US', options)}`;
            }
            
            function formatNumber(num) {
                return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }
            
            function parseNumber(formattedNum) {
                return parseFloat(formattedNum.replace(/,/g, ''));
            }
            
            function calculateConversion() {
                let sendAmount = parseNumber(sendAmountInput.value) || 0;
                
                const feeAmount = sendAmount * transferFeePercentage;
                const amountToConvert = sendAmount - feeAmount;
                
                const receiveAmount = amountToConvert * exchangeRate;
                
                feeAmountElement.textContent = `${formatNumber(feeAmount.toFixed(2))} ${sendCurrency}`;
                convertAmountElement.textContent = `${formatNumber(amountToConvert.toFixed(2))} ${sendCurrency}`;
                receiveAmountInput.value = formatNumber(receiveAmount.toFixed(2));
                exchangeRateElement.textContent = `${exchangeRate.toFixed(2)} ↗`;
            }
            
            async function fetchExchangeRate() {
                try {
                    const response = await fetch(`https://api.exchangerate-api.com/v4/latest/${sendCurrency}`);
                    const data = await response.json();
                    
                    if (data && data.rates && data.rates[receiveCurrency]) {
                        exchangeRate = data.rates[receiveCurrency];
                        calculateConversion();
                    } else {
                        console.log("Using fallback exchange rates");
                        const fallbackRates = {
                            'USD': { 'KES': 135.5, 'NGN': 785.3, 'EUR': 0.85, 'GBP': 0.73, 'USD': 1 },
