            /* Language Selector & Navbar List Styles */
            .navbar-list {
                display: flex;
                align-items: center;
                gap: 0;
            }
            
            .navbar-list ul {
                display: flex;
                align-items: center;
                margin: 0;
                padding: 0;
                list-style: none;
                gap: 25px;
            }
            
            .navbar-list ul li {
                display: flex;
                align-items: center;
            }
            
            .navbar-list ul li a {
                color: var(--black-color);
                font-size: 14px;
                font-weight: 500;
                transition: var(--transition);
                text-decoration: none;
            }
            
            .navbar-list ul li a:hover {
                color: var(--main-color);
            }
            
            .language-selector .dropdown-toggle {
                background: none;
                border: none;
                color: var(--black-color);
                font-size: 14px;
                font-weight: 500;
                display: flex;
                align-items: center;
                gap: 6px;
                padding: 0;
                transition: var(--transition);
                outline: none;
                box-shadow: none;
            }
            
            .language-selector .dropdown-toggle:hover,
            .language-selector .dropdown-toggle:focus {
                color: var(--main-color);
                box-shadow: none;
                outline: none;
            }
            
            .language-selector .dropdown-toggle img {
                width: 18px;
                height: 13px;
                border-radius: 2px;
                object-fit: cover;
            }
            
            /* Bootstrap adds chevron automatically via ::after pseudo-element */
            .language-selector .dropdown-toggle::after {
                font-size: 12px;
                margin-left: 2px;
                border-top-color: currentColor;
            }
            
            .language-selector .dropdown-menu {
                min-width: 140px;
                padding: 8px 0;
                border: 1px solid #e9ecef;
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
                border-radius: 6px;
            }
            
            .language-selector .dropdown-item {
                display: flex;
                align-items: center;
                gap: 8px;
                padding: 8px 16px;
                font-size: 14px;
                font-weight: 400;
                transition: var(--transition);
                border: none;
                background: none;
                color: var(--black-color);
            }
            
            .language-selector .dropdown-item img {
                width: 18px;
                height: 13px;
                border-radius: 2px;
                object-fit: cover;
            }
            
            .language-selector .dropdown-item:hover,
            .language-selector .dropdown-item:focus {
                background-color: rgba(16, 185, 129, 0.1);
                color: var(--main-color);
                outline: none;
            }
            
            .language-selector .dropdown-item.active {
                background-color: rgba(16, 185, 129, 0.1);
                color: var(--main-color);
                font-weight: 500;
            }
            
            /* Dark theme support */
            .theme-dark .navbar-list ul li a {
                color: var(--white-color);
            }
            
            .theme-dark .navbar-list ul li a:hover {
                color: var(--main-color);
            }
            
            .theme-dark .language-selector .dropdown-toggle {
                color: var(--white-color);
            }
            
            .theme-dark .language-selector .dropdown-toggle:hover,
            .theme-dark .language-selector .dropdown-toggle:focus {
                color: var(--main-color);
            }
            
            .theme-dark .language-selector .dropdown-menu {
